<h1>Log In</h1>

<%= form_tag sessions_path do %>
<div class="field">
  <%= label_tag :user_name %>
  <%= text_field_tag :user_name, params[:user_name] %>
</div>
<div class="field">
  <%= label_tag :user_password %>
  <%= password_field_tag :user_password %>  
</div>
<%= submit_tag "Log In" %>
<% end %>
